{
  "manifest_version": 2,
  "name": "MessengerGameDestroyer",
  "description": "Deletes facebook messenger messages related to games",
  "version": "0.3.1",
  "permissions": [
    "activeTab"
  ],
  "page_action": {
    "default_title": "Messenger Game Destroyer"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.messenger.com/*",
        "*://messenger.com/*"
      ],
      "js": ["src/delete-this.js"]
    }
  ],
  "background": {
    "scripts": ["src/the-toggler.js"],
    "persistent": false
  }
}
